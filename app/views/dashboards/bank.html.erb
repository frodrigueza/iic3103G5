<%= render layout:'dashboards/layout' do %>
	
	<div class="row option_content not_together">
		<div class="col-md-12">
			<div class="alert alert-<%= @bank_state %>">
				Su saldo bancario es de: <b><%= @bank_result %></b>
			</div>
		</div>
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-heading">
					<%= fa_icon 'file-text-o' %> Transacciones bancarias
				</div>
				<div class="panel-body">
					<div class="row">
						<table class="table">
							<thead>
								<tr>
									<th>Id</th>
									<th>Fecha</th>
									<th>Origen</th>
									<th>Destino</th>
									<th>Monto</th>
								</tr>
							</thead>
							<% @transactions.each do |t| %>
								<tr>
									<td><%= t["_id"] %></td>
									<td><%= t["updatedAt"].to_date %></td>
									<td><%= GruposInfo.get_id_cuenta(t["origen"]) %></td>
									<td><%= GruposInfo.get_id_cuenta(t["destino"]) %></td>
									<td><%= t["monto"] %></td>
								</tr>
							<% end %>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	
<% end %>